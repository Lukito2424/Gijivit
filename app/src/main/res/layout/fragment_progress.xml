<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/progres"
    android:layout_height="match_parent"
    tools:context=".fragments.ProgressFragment">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/BaskaraDemoRegular"
        android:shadowColor="#050504"
        android:shadowRadius="10"
        android:text="Share your progress"
        android:textColor="#FFC107"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <EditText
            android:id="@+id/editTextDayNumberPost"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="25sp"
            android:background="@drawable/round_outline_progress"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Which day are you on"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPictureUrlPost"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="70dp"

            android:background="@drawable/round_outline_progress"
            android:ems="10"
            android:layout_margin="10dp"
            android:hint="Enter your progress picture URL"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextDescriptionPost"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_outline_progress"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonPost"
            android:layout_width="200dp"
            android:layout_marginTop="40dp"
            android:layout_height="100dp"
            android:textSize="40sp"
            android:fontFamily="@font/BaskaraDemoRegular"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:backgroundTint="#A3F3C028"

            android:text="Post" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>